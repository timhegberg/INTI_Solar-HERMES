{%- if block.settings.liquid != blank -%}
  <div class="liquid" {{ block.shopify_attributes }}>
    {{- block.settings.liquid -}}
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Liquid",
  "tag": null,
  "settings": [
    {
      "type": "liquid",
      "id": "liquid",
      "label": "Liquid",
      "info": "Add app snippets or other Liquid code to create advanced customizations.",
      "default": "<p>Write some Liquid code.</p>"
    }
  ],
  "presets": [
    {
      "name": "Liquid"
    }
  ]
}
{% endschema %}